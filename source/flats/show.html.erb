<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="banner banner-flats" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
</div>

<div class="wrapper">
  <div class="container booking-section">
    <div class="row">
      <div class="col-sm-offset-1 col-sm-6">
        <div class="flat-details">
          <div class="owner-text">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle-small" %>
            <p><%= "#{owner}" %></p>
          </div>
          <div class="flat-text">
              <h1><%= flat.name %></h1>
              <p><%= flat.description %></p>
              <p><i class="fa fa-star" style="color: #ffb400"></i>
                 <i class="fa fa-star" style="color: #ffb400"></i>
                 <i class="fa fa-star" style="color: #ffb400"></i>
                 <i class="fa fa-star" style="color: #ffb400"></i>
                 <i class="fa fa-star" style="color: #ffb400"></i></p>
            </div>
        </div>
      </div>
      <div class="col-sm-5">
        <form action="#" style="background-color: #f2f2f2; padding: 30px;">
            <h4>Book this flat</h4>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkin" id="checkin">
                </div>
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkout">
                </div>
              </div>
            </div>
            <div class="form-group">
              <select name="" id="guests" class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
              </select>
            </div>
            <input type="submit" class="btn btn-primary" value="Book it" style="width: 100%">
          </form>
    </div>
  </div>
</div>
